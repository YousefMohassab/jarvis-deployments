NODE_ENV=development
PORT=8000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smart_building
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_LOGGING=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# MQTT
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=smart-building-backend

# BACnet
BACNET_INTERFACE=0.0.0.0
BACNET_PORT=47808
BACNET_BROADCAST_ADDRESS=255.255.255.255

# Modbus
MODBUS_HOST=localhost
MODBUS_PORT=502
MODBUS_TIMEOUT=5000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@smartbuilding.com

# SMS Configuration (optional)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Feature Flags
ENABLE_MOCK_DEVICES=true
ENABLE_WEBSOCKET=true
ENABLE_MQTT=true
ENABLE_BACNET=false
ENABLE_MODBUS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Collection
DATA_COLLECTION_INTERVAL_MS=300000
ALERT_CHECK_INTERVAL_MS=60000
OPTIMIZATION_INTERVAL_MS=900000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=*

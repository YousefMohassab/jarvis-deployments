{
  "id": null,
  "title": "Fleet Health Overview",
  "tags": ["asset-health", "fleet", "overview"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Fleet KPIs",
      "type": "stat",
      "targets": [
        {
          "expr": "count(asset_health_status)",
          "refId": "A",
          "legendFormat": "Assets Monitored"
        },
        {
          "expr": "count(asset_health_status{risk_band=\"RED\"})",
          "refId": "B",
          "legendFormat": "RED Alerts"
        },
        {
          "expr": "sum(asset_health_downtime_avoided_usd_total)",
          "refId": "C",
          "legendFormat": "Downtime Avoided ($)"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "color": {"mode": "palette-classic"},
          "custom": {"hideFrom": {"legend": false, "tooltip": false, "vis": false}}
        }
      }
    },
    {
      "id": 2,
      "title": "Risk Distribution",
      "type": "piechart",
      "targets": [
        {
          "expr": "count by (risk_band) (asset_health_status)",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "pieType": "pie",
        "tooltip": {"mode": "single"},
        "legend": {
          "displayMode": "visible",
          "placement": "right",
          "values": ["percent"]
        }
      }
    },
    {
      "id": 3,
      "title": "Alert Trend (24h)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(asset_health_alerts_total[1h])",
          "refId": "A",
          "legendFormat": "Alert Rate"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "options": {
        "legend": {
          "calcs": [],
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {"mode": "single"}
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {"type": "linear"},
            "hideFrom": {"legend": false, "tooltip": false, "vis": false}
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 4,
      "title": "Asset Health Heatmap",
      "type": "heatmap",
      "targets": [
        {
          "expr": "avg by (plant, asset_class) (asset_health_risk_score)",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "options": {
        "calculate": false,
        "yAxis": {
          "unit": "string"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "continuous-GrYlRd",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 0.4},
              {"color": "red", "value": 0.7}
            ]
          },
          "custom": {
            "hideFrom": {"legend": false, "tooltip": false, "vis": false}
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Processing Latency",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(asset_health_processing_duration_seconds_bucket[5m])) * 1000",
          "refId": "A",
          "legendFormat": "p95 Latency"
        },
        {
          "expr": "histogram_quantile(0.50, rate(asset_health_processing_duration_seconds_bucket[5m])) * 1000",
          "refId": "B",
          "legendFormat": "p50 Latency"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {"mode": "palette-classic"},
          "custom": {
            "axisPlacement": "auto",
            "axisLabel": "Latency (ms)",
            "scaleDistribution": {"type": "linear"}
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Model Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "asset_health_model_precision",
          "refId": "A",
          "legendFormat": "Precision@RED"
        },
        {
          "expr": "asset_health_model_recall",
          "refId": "B",
          "legendFormat": "Recall@RED"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": {"mode": "palette-classic"}
        }
      },
      "options": {
        "legend": {
          "calcs": ["lastNotNull"],
          "displayMode": "table",
          "placement": "right"
        }
      }
    }
  ],
  "time": {"from": "now-24h", "to": "now"},
  "refresh": "30s",
  "schemaVersion": 27,
  "version": 1
}
{
  "dashboard": {
    "id": null,
    "uid": "api-metrics",
    "title": "API Monitoring Dashboard",
    "tags": ["api", "fastapi", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        },
        {
          "name": "endpoint",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(fastapi_requests_total, endpoint)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "status",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(fastapi_requests_total, status)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "interval",
          "type": "interval",
          "query": "30s,1m,5m,10m,30m",
          "auto": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(fastapi_requests_total{endpoint=~\"$endpoint\"}[$interval]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(fastapi_requests_total{endpoint=~\"$endpoint\"}[$interval]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(fastapi_requests_total{status=~\"5..\",endpoint=~\"$endpoint\"}[$interval])) / sum(rate(fastapi_requests_total{endpoint=~\"$endpoint\"}[$interval]))) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Avg Response Time",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(fastapi_requests_total{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Response Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum by (status) (rate(fastapi_requests_total{endpoint=~\"$endpoint\",status=~\"$status\"}[$interval]))",
            "legendFormat": "{{ status }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s"},
          {"format": "short"}
        ],
        "seriesOverrides": [
          {"alias": "/2../", "color": "#73BF69"},
          {"alias": "/3../", "color": "#5794F2"},
          {"alias": "/4../", "color": "#FF9830"},
          {"alias": "/5../", "color": "#F2495C"}
        ]
      },
      {
        "id": 7,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by (le) (rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum by (le) (rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 2, "colorMode": "critical", "op": "gt", "fill": false, "line": true, "lineColor": "red"}
        ]
      },
      {
        "id": 8,
        "title": "Response Time by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (endpoint, le) (rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])))",
            "legendFormat": "{{ endpoint }} (p95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "fastapi_active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "fastapi_websocket_connections",
            "legendFormat": "WebSocket Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 100, "colorMode": "critical", "op": "gt", "fill": false, "line": true}
        ]
      },
      {
        "id": 10,
        "title": "Request Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fastapi_request_size_bytes_bucket{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fastapi_request_size_bytes_bucket{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Response Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fastapi_response_size_bytes_bucket{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fastapi_response_size_bytes_bucket{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Rate Limit Status",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "rate(fastapi_rate_limit_exceeded_total{endpoint=~\"$endpoint\"}[$interval])",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Rate Limit Exceeded/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Request Methods Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "sum by (method) (increase(fastapi_requests_total{endpoint=~\"$endpoint\"}[$interval]))",
            "legendFormat": "{{ method }}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right"},
          "pieType": "donut"
        }
      },
      {
        "id": 14,
        "title": "Endpoint Performance Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "sum(rate(fastapi_request_duration_seconds_bucket{endpoint=~\"$endpoint\"}[$interval])) by (endpoint, le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 2,
          "yAxis": {
            "format": "s"
          }
        }
      },
      {
        "id": 15,
        "title": "Top 10 Slowest Endpoints",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 52},
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum by (endpoint, le) (rate(fastapi_request_duration_seconds_bucket[$interval]))))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "Value": "P95 Latency (s)",
                "endpoint": "Endpoint"
              }
            }
          }
        ]
      },
      {
        "id": 16,
        "title": "Error Rate by Endpoint",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 52},
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (rate(fastapi_requests_total{status=~\"5..\"}[$interval])) / sum by (endpoint) (rate(fastapi_requests_total[$interval])) * 100)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "Value": "Error Rate (%)",
                "endpoint": "Endpoint"
              }
            }
          }
        ]
      }
    ]
  }
}

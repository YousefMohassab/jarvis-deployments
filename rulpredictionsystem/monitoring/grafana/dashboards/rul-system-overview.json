{
  "dashboard": {
    "id": null,
    "uid": "rul-system-overview",
    "title": "RUL System Overview",
    "tags": ["rul", "overview", "production"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "instance",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "multi": false,
          "includeAll": false
        },
        {
          "name": "interval",
          "type": "interval",
          "query": "1m,5m,10m,30m,1h",
          "auto": true,
          "auto_count": 30,
          "auto_min": "10s"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "${datasource}",
          "enable": true,
          "iconColor": "blue",
          "expr": "changes(process_start_time_seconds[5m]) > 0"
        },
        {
          "name": "Alerts",
          "datasource": "${datasource}",
          "enable": true,
          "iconColor": "red",
          "expr": "ALERTS{alertstate=\"firing\"}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"fastapi-app\"}",
            "legendFormat": "API",
            "refId": "A"
          },
          {
            "expr": "up{job=\"postgresql\"}",
            "legendFormat": "Database",
            "refId": "B"
          },
          {
            "expr": "up{job=\"airflow\"}",
            "legendFormat": "Airflow",
            "refId": "C"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "UP", "color": "green"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(fastapi_requests_total[$interval]))",
            "legendFormat": "Total Requests/s",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(fastapi_requests_total{status=~\"5..\"}[$interval])) / sum(rate(fastapi_requests_total[$interval])) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [5]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Error Rate"
        }
      },
      {
        "id": 4,
        "title": "Active Alerts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(ALERTS{alertstate=\"firing\"}) OR vector(0)",
            "legendFormat": "Firing Alerts",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "API Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fastapi_request_duration_seconds_bucket[$interval]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(fastapi_request_duration_seconds_bucket[$interval]))",
            "legendFormat": "p99",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fastapi_request_duration_seconds_bucket[$interval]))",
            "legendFormat": "p50",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 2, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 6,
        "title": "Model Prediction Accuracy",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "model_prediction_accuracy",
            "legendFormat": "Accuracy",
            "refId": "A"
          },
          {
            "expr": "model_r2_score",
            "legendFormat": "RÂ² Score",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Score", "min": 0, "max": 1},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.85, "colorMode": "critical", "op": "lt", "fill": true, "line": true}
        ]
      },
      {
        "id": 7,
        "title": "Predictions Distribution",
        "type": "piechart",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 10},
        "targets": [
          {
            "expr": "sum(increase(model_predictions_total{rul_category=\"critical\"}[$interval]))",
            "legendFormat": "Critical",
            "refId": "A"
          },
          {
            "expr": "sum(increase(model_predictions_total{rul_category=\"warning\"}[$interval]))",
            "legendFormat": "Warning",
            "refId": "B"
          },
          {
            "expr": "sum(increase(model_predictions_total{rul_category=\"normal\"}[$interval]))",
            "legendFormat": "Normal",
            "refId": "C"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "right"},
          "pieType": "donut",
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 10},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[$interval])) * 100)",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 85, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 10},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory Usage", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 85, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 10,
        "title": "Disk Usage",
        "type": "bargauge",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 10},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay\"})) * 100",
            "legendFormat": "{{ mountpoint }}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(fastapi_requests_total[$interval]))",
            "legendFormat": "{{ endpoint }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Model Inference Latency",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(model_inference_duration_seconds_bucket[$interval]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(model_inference_duration_seconds_bucket[$interval]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Inference Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 14,
        "title": "Airflow Task Status",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 22},
        "targets": [
          {
            "expr": "sum(rate(airflow_task_success[$interval]))",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(airflow_task_failures[$interval]))",
            "legendFormat": "Failures",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Tasks/s"},
          {"format": "short"}
        ]
      },
      {
        "id": 15,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 22},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[$interval])",
            "legendFormat": "Receive {{ device }}",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[$interval])",
            "legendFormat": "Transmit {{ device }}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/s"},
          {"format": "short"}
        ]
      }
    ]
  }
}

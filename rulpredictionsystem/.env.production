# ============================================================================
# Production Environment Variables
# WARNING: Never commit this file to version control
# ============================================================================

APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info
VERSION=1.0.0

# Database (Update with production credentials)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=rul_prediction
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# API
API_PORT=8000
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_KEY
API_KEY=CHANGE_ME_GENERATE_API_KEY
MODEL_VERSION=1.0.0

# Dashboard
DASHBOARD_PORT=80
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_WS_URL=wss://your-domain.com/ws

# Airflow
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_FERNET_KEY=CHANGE_ME_GENERATE_FERNET_KEY
AIRFLOW_WEBSERVER_SECRET_KEY=CHANGE_ME_GENERATE_SECRET
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:CHANGE_ME

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION
GRAFANA_ROOT_URL=https://your-domain.com/grafana

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false
ENABLE_SWAGGER_UI=false

# Performance
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Security
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com
RATE_LIMIT_ENABLED=true

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

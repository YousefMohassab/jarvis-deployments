# ============================================================================
# Environment Variables - Example Configuration
# Copy this file to .env and update with your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info
VERSION=1.0.0

# ----------------------------------------------------------------------------
# Database Configuration - PostgreSQL
# ----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=rul_prediction
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_PORT=8000
SECRET_KEY=your_secret_key_min_32_chars_long_change_in_production
API_KEY=your_api_key_for_external_access
MODEL_VERSION=1.0.0

# ----------------------------------------------------------------------------
# Dashboard Configuration
# ----------------------------------------------------------------------------
DASHBOARD_PORT=80
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# ----------------------------------------------------------------------------
# Airflow Configuration
# ----------------------------------------------------------------------------
AIRFLOW_WEBSERVER_PORT=8080
AIRFLOW_FERNET_KEY=your_airflow_fernet_key_generate_with_python_cryptography_fernet
AIRFLOW_WEBSERVER_SECRET_KEY=your_webserver_secret_key_change_in_production
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:your_secure_password

# ----------------------------------------------------------------------------
# Monitoring Configuration
# ----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_ROOT_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Email Configuration (for alerts)
# ----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@rul-prediction.com

# ----------------------------------------------------------------------------
# AWS Configuration (for S3 model storage)
# ----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=rul-prediction-models

# ----------------------------------------------------------------------------
# Docker Registry Configuration
# ----------------------------------------------------------------------------
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_USERNAME=your_username
DOCKER_PASSWORD=your_password

# ----------------------------------------------------------------------------
# SSL/TLS Configuration
# ----------------------------------------------------------------------------
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false
ENABLE_SWAGGER_UI=true

# ----------------------------------------------------------------------------
# Performance Settings
# ----------------------------------------------------------------------------
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
MAX_REQUESTS_PER_SECOND=100

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:80
RATE_LIMIT_ENABLED=true

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rul-prediction-backups

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=100M
LOG_BACKUP_COUNT=10

# ----------------------------------------------------------------------------
# Model Configuration
# ----------------------------------------------------------------------------
MODEL_PATH=/app/models
MODEL_CACHE_SIZE=1000
MODEL_INFERENCE_TIMEOUT=30
AUTO_RETRAIN_ENABLED=true
RETRAIN_THRESHOLD_ACCURACY=0.85

# ----------------------------------------------------------------------------
# Data Configuration
# ----------------------------------------------------------------------------
DATA_RETENTION_DAYS=365
RAW_DATA_PATH=/app/data/raw
PROCESSED_DATA_PATH=/app/data/processed
FEATURE_STORE_PATH=/app/data/features
